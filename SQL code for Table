show databases ;
CREATE DATABASE IF NOT EXISTS employee_db;

USE employee_db;

CREATE TABLE IF NOT EXISTS employees (
    emp_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    email VARCHAR(100),
    phone VARCHAR(15),
    address VARCHAR(255),
    post VARCHAR(50),
    salary INT
);

show tables;
CREATE USER 'rajesh'@'employee_db' IDENTIFIED BY 'Bhavesh192@03';
GRANT ALL PRIVILEGES ON *.* TO 'rajesh'@'study' WITH GRANT OPTION;
FLUSH PRIVILEGES;


select * from employees;
